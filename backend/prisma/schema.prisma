generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"  
}

enum Role {
  admin
  owner
  user
}

model User {
  id       String    @id @default(uuid())
  name     String
  role     Role      @default(user)
  bookings Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([startTime, endTime])
  @@index([userId])
}
